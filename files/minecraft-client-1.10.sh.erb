#!/usr/bin/env sh

USERNAME="<%= username %>"
VERSION="<%= version %>"
MINOR_VERSION=`echo $VERSION | sed -e 's/\.[0-9]*$//g'`

UUID=""
ACCESS_TOKEN=""

APP="/Applications/Minecraft.app"
APP_SUPPORT="$HOME/Library/Application Support/minecraft"
APP_ICON="$APP_SUPPORT/assets/objects/99/991b421dfd401f115241601b2b373140a8d78572"

JAVA_HOME="$APP/Contents/runtime/jre-x64/1.8.0_74"

CLASSPATH="$APP_SUPPORT/libraries/com/mojang/netty/1.6/netty-1.6.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/oshi-project/oshi-core/1.1/oshi-core-1.1.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/net/java/dev/jna/jna/3.4.0/jna-3.4.0.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/net/java/dev/jna/platform/3.4.0/platform-3.4.0.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/ibm/icu/icu4j-core-mojang/51.2/icu4j-core-mojang-51.2.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/net/sf/jopt-simple/jopt-simple/4.6/jopt-simple-4.6.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/paulscode/codecjorbis/20101023/codecjorbis-20101023.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/paulscode/codecwav/20101023/codecwav-20101023.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/paulscode/libraryjavasound/20101123/libraryjavasound-20101123.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/paulscode/librarylwjglopenal/20100824/librarylwjglopenal-20100824.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/paulscode/soundsystem/20120107/soundsystem-20120107.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/io/netty/netty-all/4.0.23.Final/netty-all-4.0.23.Final.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/google/guava/guava/17.0/guava-17.0.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/apache/commons/commons-lang3/3.3.2/commons-lang3-3.3.2.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/commons-io/commons-io/2.4/commons-io-2.4.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/commons-codec/commons-codec/1.9/commons-codec-1.9.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/net/java/jinput/jinput/2.0.5/jinput-2.0.5.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/net/java/jutils/jutils/1.0.0/jutils-1.0.0.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/google/code/gson/gson/2.2.4/gson-2.2.4.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/mojang/authlib/1.5.22/authlib-1.5.22.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/com/mojang/realms/1.9.8/realms-1.9.8.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/apache/commons/commons-compress/1.8.1/commons-compress-1.8.1.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/apache/httpcomponents/httpclient/4.3.3/httpclient-4.3.3.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/commons-logging/commons-logging/1.1.3/commons-logging-1.1.3.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/apache/httpcomponents/httpcore/4.3.2/httpcore-4.3.2.jar"

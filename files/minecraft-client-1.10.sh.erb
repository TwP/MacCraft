CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/apache/logging/log4j/log4j-core/2.0-beta9/log4j-core-2.0-beta9.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/lwjgl/lwjgl/lwjgl/2.9.2-nightly-20140822/lwjgl-2.9.2-nightly-20140822.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/libraries/org/lwjgl/lwjgl/lwjgl_util/2.9.2-nightly-20140822/lwjgl_util-2.9.2-nightly-20140822.jar"
CLASSPATH="$CLASSPATH:$APP_SUPPORT/versions/$VERSION/$VERSION.jar"

# remove log files older than 30 days
/usr/bin/find logs -mtime +30 -exec rm {} \;

# start the Minecraft client
exec $JAVA_HOME/bin/java \
  -Xdock:icon="$APP_ICON" \
  -Xdock:name=Minecraft \
  -Xms512M -Xmx1G -Xmn128M \
  -XX:+UseConcMarkSweepGC \
  -XX:+CMSIncrementalMode \
  -XX:-UseAdaptiveSizePolicy \
  -Djava.library.path="$APP_SUPPORT/versions/$VERSION/$VERSION-natives" \
  -cp "$CLASSPATH" \
  net.minecraft.client.main.Main \
  --username "$USERNAME" \
  --version "$VERSION" \
  --gameDir "$APP_SUPPORT" \
  --assetsDir "$APP_SUPPORT/assets" \
  --assetIndex "$MINOR_VERSION" \
  --uuid "$UUID" \
  --accessToken "$ACCESS_TOKEN" \
  --userProperties {} \
  --userType mojang \
  --versionType release \
  --nativePath "$APP" \
  --nativeStartupPath "$APP/Contents" \
  --nativeExecutable "$APP/Contents/MacOS/launcher" \
  --nativeLauncherVersion 308

